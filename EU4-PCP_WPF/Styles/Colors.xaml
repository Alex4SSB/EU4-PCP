<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GreenBackground" TargetType="{x:Type TextBlock}">
        <Setter Property="Background" Value="#FF7CB61A" />
    </Style>

    <Style x:Key="RedBackground" TargetType="{x:Type TextBlock}">
        <Setter Property="Background" Value="#FFDE2525" />
    </Style>
</ResourceDictionary>